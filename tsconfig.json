{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",  
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",  
    "resolveJsonModule": true, 
    "skipLibCheck": true        
  },
  "include": ["src/**/*.ts", "src/interfaces"],
  "exclude": ["node_modules"]
}

